@{
    Layout = "_MasterLayout";
    var res_getCateProduct = ViewData["res_getCateProduct"] as List<Category>;
    List<TypeProduct> res_listTypeProduct = ViewData["res_listTypeProduct"] as List<TypeProduct>;
}
<section id="section_contentAdmin">
    <div class="container_admin">
        <div class="row box_row p-3">
            @await Html.PartialAsync("../Shared/_DashboardAdminPage.cshtml");

            <div class="col-md-10 bg bg-light">
                <h2 class="mb-5">Loại  <small>danh sách</small></h2>
                <table id="example" class="table table-striped table-bordered" style="width:100%">
                    <thead>
                        <tr>
                            <th>STT</th>
                            <th>Tên danh mục</th>
                            <th>Tên loại</th>
                            <th>Ảnh</th>
                            <th>Trạng thái</th>
                            <th>Tác vụ</th>
                        </tr>
                    </thead>
                    <tbody>
                        @{
                            for (var i = 0; i < res_listTypeProduct.Count; i++)
                            {
                                var textState = res_listTypeProduct[i].Active == 1 ? "text-sucess" : "text-danger";
                                                <tr>
                                                    <td>@(i+1)</td>
                                                    <td>@res_listTypeProduct[i].CategoryName</td>
                                                    <td>@res_listTypeProduct[i].NameType</td>
                                                    <td><img src="@res_listTypeProduct[i].ImageType"></td>
                                                    <td><i class="fas fa-check @textState s-25"></i></td>
                                                    <td>
                                                        <a href="/Admin/AdminEditType?id_type=@res_listTypeProduct[i].Id"><i class="fas fa-edit s-25 mr-1" title="Sửa"></i></a>
                                                        <a href="/Admin/DeleteTypeToDB?id_type=@res_listTypeProduct[i].Id"><i class="fas fa-trash-alt s-25 text-danger" title="Xóa"></i></a>
                                                    </td>
                                                </tr>

                            }
                        }
                </table>
            </div>
        </div>
    </div>
</section>
<script>
    $(document).ready(function () {
        $('#example').DataTable();
    });

</script>